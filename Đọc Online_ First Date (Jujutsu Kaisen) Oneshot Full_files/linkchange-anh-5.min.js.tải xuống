function serverdoAction(e,s){$.post("../ajax_load_server.php",{server_id:e,server_type:s},function(e){$("#image").html(e),$("html, body"),"1"===s?($(".buttonhide-1").last().addClass("selected-server"),$(".buttonhide-2").last().removeClass("selected-server"),$(".buttonhide-3").last().removeClass("selected-server")):"2"===s?($(".buttonhide-2").last().addClass("selected-server"),$(".buttonhide-1").last().removeClass("selected-server"),$(".buttonhide-3").last().removeClass("selected-server")):($(".buttonhide-3").last().addClass("selected-server"),$(".buttonhide-1").last().removeClass("selected-server"),$(".buttonhide-2").last().removeClass("selected-server"))})}